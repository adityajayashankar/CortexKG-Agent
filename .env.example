# Runtime mode
APP_ENV=development

# LLM backends (optional)
# GROQ_API_KEY=
# OPENROUTER_API_KEY=

# Neo4j (required for graph retrieval/loaders)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-me

# Qdrant / GraphRAG
# If QDRANT_URL is set, remote Qdrant is used.
# Otherwise local file-backed Qdrant path mode is used.
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_PATH=data/qdrant
QDRANT_COLLECTION=vuln_kg_evidence_v1
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Backend hardening
API_KEY=change-me
CORS_ALLOWLIST=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
